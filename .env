# evAlarm-IoT Gateway Konfiguration f√ºr Docker

# Umgebung (development oder production)
FLASK_ENV=development

# Service-Ports
API_PORT=8080
AUTH_PORT=8081
PROCESSOR_PORT=8082
WORKER_PORT=8083
GATEWAY_PORT=8000

# Redis-Konfiguration (Redis Host ist der Containername in Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_PREFIX=iot_gateway

# MongoDB-Konfiguration (MongoDB Host ist der Containername in Docker)
MONGO_URI=mongodb://mongo:27017/evalarm_iot
MONGODB_URI=mongodb://mongo:27017/evalarm_iot
MONGO_DB=evalarm_iot
MONGODB_DB=evalarm_iot

# JWT-Secrets
JWT_SECRET=change_this_to_a_random_secure_string
JWT_REFRESH_SECRET=change_this_to_another_random_secure_string

# Worker Konfiguration
WORKER_THREADS=2
WORKER_POLL_INTERVAL=0.5

# Logging-Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO