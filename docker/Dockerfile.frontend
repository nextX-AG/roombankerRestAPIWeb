# Build Stage
FROM node:18-alpine as builder
WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci --legacy-peer-deps
COPY frontend/ ./
RUN npm run build

# Production Stage
FROM node:18-alpine
WORKDIR /app

# Installiere nur die ben√∂tigten Produktions-Dependencies
COPY docker/frontend-server.js ./
RUN npm init -y && npm install express http-proxy-middleware

# Kopiere das gebaute Frontend
COPY --from=builder /app/dist ./dist

EXPOSE 80
CMD ["node", "frontend-server.js"] 